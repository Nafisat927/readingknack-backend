# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=your-database-url-here

# S3-Compatible Storage Configuration
# Set USE_S3=True to enable S3-compatible storage
USE_S3=False

# S3-Compatible Service Credentials
# For AWS S3:
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# For S3-compatible services (MinIO, DigitalOcean Spaces, etc.):
# AWS_S3_ENDPOINT_URL=https://your-s3-compatible-endpoint.com
# AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com  # Example for DigitalOcean Spaces
# AWS_S3_ENDPOINT_URL=http://localhost:9000  # Example for local MinIO

# Optional: Custom domain for your S3-compatible service
# AWS_S3_CUSTOM_DOMAIN=your-custom-domain.com

# Security settings
AWS_S3_SECURE_URLS=True
AWS_DEFAULT_ACL=public-read 